{% extends 'layout.html.twig' %}

{% block content %}

    <div class = "pageChat">
        <div>
            <img class="grosChatRond" src="{{ chat.photo}}" alt="Photo de {{ chat.nom }}"></img>
        </div>

        <div class="droitedelapageChat">
            <h6> {{ chat.nom }} </h6>
                <div class="nom_age_button"></br>
                <p>{{chat.age}} ans<p>
                    <div class="textbutton"><button><a href="chatformadopt">Je l'adopte !</a></button></div>
        </div>

            <section id="textPresentation">
                <h6>{{chat.presentation}}</h6>
                    <p>Vaccination : {{chat.vaccin}}
                    Stérilisation : {{chat.sterilise}}
                    Compatible autres animaux : {{ chat.compatibilite_autre_animaux}}
                    Sexe : {{ chat.sexe}}
                    Race : {{chat.race}}
                    Couleur : {{chat.couleur}}

                    </p>
            </section>
        </div>
    </div>
    
    

    <div class="contact">
        <form name = "contactform" id="contactform" method="POST">

            <label for="prenom">Prénom:</label><br>
                <input type="text" id="prenom" name="prenom" value="<?= $adoptant['prenom'] ?? '' ?>" placeholder="Gustave" required><br>

            <label for="nom">Name:</label><br>
                <input type="text" id="nom" name="nom" value="<?= $adoptant['nom'] ?? '' ?>" placeholder="Eiffel" required><br>

            <label for="adresse">Votre adresse:</label><br>
                <input type="text" id="adresse" name="adresse" value="<?= $adoptant['adresse'] ?? '' ?>" placeholder="55 rue de la gauloise" required><br>

            <label for="telephone">Votre numéro de téléphone:</label><br>
                <input type="text" id="telephone" name="telephone" value="<?= $adoptant['telephone'] ?? '' ?>" placeholder="XX-XX-XX-XX-XX" required><br>

            <label for="Code_postal">Votre code postal:</label><br>
                <input type="text" id="Code_postal" name="Code_postal" value="<?= $adoptant['Code_postal'] ?? '' ?>" placeholder="00000" required><br>

            <label for="ville">Votre ville:</label><br>
                <input type="text" id="ville" name="ville" value="<?= $adoptant['ville'] ?? '' ?>" placeholder="Paris" required><br>
                
            <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" value="<?= $adoptant['email'] ?? '' ?>" placeholder="votreadresse@email.com" required><br>
            <br><br>
                <input type="submit" value="Adopter ce chat !" id="submit">
        </form>
    </div>



{% endblock %}
