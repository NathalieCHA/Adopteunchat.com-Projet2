            <label for="postal">Votre code postal:</label><br>
                <input type="text" id="postal" name="postal" placeholder="Votre code postal" required><br>
            <label for="ville">Votre ville:</label><br>
                <input type="text" id="ville" name="ville" placeholder="Votre ville" required><br>
            <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" placeholder="votreadresse@email.com" required><br>
            <br><br>
                <input type="submit" value="Adopter ce chat !" id="submit">
        </form>
    </div>




{% endblock %}