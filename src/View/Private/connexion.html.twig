{% extends 'layoutAdmin.html.twig' %}

{% block content %}

<header>
    <div class="logo">AdopteUnChat.com</div>
</header>
  <div id="container">
    <form id="form_admin" action="/private/connexion" method="POST">
      <h2 id="titleConnexion">Connexion</h2>
                  
      <label for="nom"><b>Nom d'utilisateur</b></label>
      <input class="inputadminNom" type="text" id="nom" placeholder="Entrer le nom d'utilisateur" name="nom" >

      <label for="mdp"><b>Mot de passe</b></label>
      <input class="inputadminMdp" type="password" id="mdp" placeholder="Entrer le mot de passe" name="mdp" >

      <input class="button" type="submit" id='submit' value='CONNEXION' >
      {{error}}
    </form>
  </div>  
{% endblock %}

