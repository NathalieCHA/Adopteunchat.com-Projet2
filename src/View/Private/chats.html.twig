   {% for chat in chats %}
      <div class="item">
         <div class="itemPhoto itemInfo">
            <a href="edit?id={{chat.id}}" type="hidden" value="{{chat.id}}"><img src="{{ chat.photo }}" alt="Photo de {{ chat.nom }}"></a>
         </div>

         <div class="itemNom itemInfo">
            <a href="edit?id={{chat.id}}" type="hidden" value="{{chat.id}}"> {{ chat.nom }} </a> 
         </div>

         <div class="itemAge itemInfo"> {{chat.age}} </div>
         
         <div class="itemCouleur itemInfo"> {{chat.couleur}} </div>

         <div class="itemActions itemInfo">
            <a href="edit?id={{chat.id}}"><i class="far fa-edit"></i></a>

            <form action="delete" method="POST" onsubmit="return confirm('Voulez-vous vraiment supprimer {{chat.nom}}');">
               <input name="id" type="hidden" value="{{chat.id}}">
               <button id ="boutonDelete" class ="boutonActions" type="submit"><i class="fas fa-trash"></i></button>
            </form>
         </div>
      </div>
   {% endfor %}
